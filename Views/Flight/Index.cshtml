@model IEnumerable<COMP2139_Assignment1_Nigar_Anar_Adler.Models.Flight>

<h2>Flights</h2>

<table class="table">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.Airline</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime</td>
                <td>@flight.ArrivalTime</td>
                <td>@flight.Price</td>
            </tr>
        }
    </tbody>
</table>