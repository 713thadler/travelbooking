@model IEnumerable<COMP2139_Assignment1_Nigar_Anar_Adler.Models.Flight>

@{
    ViewData["Title"] = "Search Flights";
}

<h2>Search Flights</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Airline</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Departure Time</th>
                <th>Arrival Time</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in Model)
            {
                <tr>
                    <td>@flight.Airline</td>
                    <td>@flight.Origin</td>
                    <td>@flight.Destination</td>
                    <td>@flight.DepartureTime.ToString("g")</td>
                    <td>@flight.ArrivalTime.ToString("g")</td>
                    <td>@flight.Price.ToString("C")</td>
                    <td>
                        <a asp-action="BookFlight" asp-route-flightId="@flight.FlightID" class="btn btn-primary">Book</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No flights were found matching your search criteria.</p>
}