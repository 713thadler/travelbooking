@model IEnumerable<COMP2139_Assignment1_Nigar_Anar_Adler.Models.Flight>

@{
    ViewData["Title"] = "Manage Flights";
}

<h2>Manage Flights</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Flight</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Airline</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.Airline</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime.ToString("g")</td>
                <td>@flight.ArrivalTime.ToString("g")</td>
                <td>@flight.Price.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@flight.FlightID" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-route-id="@flight.FlightID" class="btn btn-secondary">Details</a> |
                    <a asp-action="Delete" asp-route-id="@flight.FlightID" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>