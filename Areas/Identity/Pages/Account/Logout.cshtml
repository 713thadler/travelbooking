@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<h1>@ViewData["Title"]]</h1>

@if (User.Identity.IsAuthenticated)
{
    <form method="post">
        <button type="submit" class="btn btn-primary">Logout</button>
    </form>
}
else
{
    <p>You are already logged out.</p>
    <a href="/">Go Home</a>
}
