<div class="container mt-3">
    <div class="row">
        <!-- Car Rentals Card -->
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-header">Car Rentals</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.CarRentalCount Total Rentals</h5>
                    <p class="card-text">Manage your car rental listings.</p>
                    <!-- Removed asp-area to point to the main CarRental controller -->
                    <a asp-controller="CarRental" asp-action="Index" class="btn btn-light">View Rentals</a>
                </div>
            </div>
        </div>
        <!-- Flights Card -->
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-header">Flights</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.FlightCount Total Flights</h5>
                    <p class="card-text">Overview of flight schedules and bookings.</p>
                    <!-- Removed asp-area to point to the main Flight controller -->
                    <a asp-controller="Flight" asp-action="Index" class="btn btn-light">View Flights</a>
                </div>
            </div>
        </div>
        <!-- Hotels Card -->
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-header">Hotels</div>
                <div class="card-body">
                    <h5 class="card-title">@Model.HotelCount Total Hotels</h5>
                    <p class="card-text">Manage hotel listings and reservations.</p>
                    <!-- Specifying the Admin area for the Hotel controller -->
                    <a asp-area="Admin" asp-controller="Hotel" asp-action="Index" class="btn btn-light">View Hotels</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Additional rows and cards can be added here for more statistics or actions -->
</div>

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
